<Window x:Class="_dodro_i_pozitiv_.AddNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить заметку" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBox x:Name="titleTextBox" ToolTip="Название" Margin="0,0,0,10"/>
        <TextBox x:Name="descriptionTextBox" ToolTip="Описание" Margin="0,0,0,10"/>
        <DatePicker x:Name="datePicker" SelectedDate="{Binding Path=Vrema, Mode=TwoWay}"/>
        <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,5,0,5"/>
        <Button Content="Отмена" Click="CancelButton_Click"/>
    </StackPanel>
</Window>

<Window x:Class="TicTacToeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики" Height="350" Width="525">
    <Grid>
        <UniformGrid Rows="3" Columns="3" Margin="10">
            <Button x:Name="Button0" Click="Button_Click"/>
            <Button x:Name="Button1" Click="Button_Click"/>
            <Button x:Name="Button2" Click="Button_Click"/>
            <Button x:Name="Button3" Click="Button_Click"/>
            <Button x:Name="Button4" Click="Button_Click"/>
            <Button x:Name="Button5" Click="Button_Click"/>
            <Button x:Name="Button6" Click="Button_Click"/>
            <Button x:Name="Button7" Click="Button_Click"/>
            <Button x:Name="Button8" Click="Button_Click"/>
        </UniformGrid>
        <Button x:Name="RestartButton" Content="Начать заново" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="RestartButton_Click"/>
        <TextBlock x:Name="ResultText" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="16"/>
    </Grid>
</Window>
